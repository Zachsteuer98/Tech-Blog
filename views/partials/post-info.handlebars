<article class="post">
      <div class="title">
        <a href="/post/{{id}}" target="_blank">{{title}}</a>
      </div>
      <div class="meta">
        {{post_text}}
      </div>
      <div class="meta">
        by {{user.username}} on
        {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
</article>